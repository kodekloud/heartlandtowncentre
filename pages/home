<script>
    
    $(document).ready(function() {
        function render_page_details(){
            var banners = getBanners();
            renderPageData("#banner_slider_ul", "#banner_slider_template", banners, "banners")
            load_slider("flexslider");
            
            var featureList = getFeatureList();
            renderPageData("#bottom_block_container", "#bottom_block_template", featureList, "bottom_block")
            $(".loading_overlay").hide();
        }
        
        
        loadMallData(render_page_details); 
    })
</script>