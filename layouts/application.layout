<!--Header -->
<div class="header">
    <!-- iphone header -->
    <div class="mobile_header visible-phone top_nav row-fluid" >        
        <li class="dropdown custom_dropdown">
            <button type="button" data-toggle="dropdown" class="pull-right" style="background-color:none;padding:10px 0 0; border:none">
                <img src="/system/site_images/photos/000/000/010/original/button_menu.png?1364727773" />
            </button>
            <ul class="dropdown-menu bottom pull-right" style="width:100%;left:0%;margin-top:55px">                
    		    <div class="arrow" style="left:93%"></div>
                {% for menu_item in site.menu_items_array %}
                	<div class="mobile_menu_header" style="margin-left:5px;margin-right:5px;">
                		<a href='{{ menu_item["url"] }}' >{{menu_item["title_code"])}} </a>
      				</div>
    					{% for sub_menu_item in menu_item["sub_menu_items"] %}
    					    <div class="mobile_menu_item" style="margin-left:5px;margin-right:5px;">
                			<a href='{{sub_menu_item["url"] }}'>{{sub_menu_item["title_code"])}}</a>
      						</div>
    					{% endfor %}
    		 	{% endfor %}
            </ul>
        </li>
        <a id="mobile_logo" href="/">
            <img src="{{site.logo_image_path}}" />
        </a>
    </div>
    <!-- iphone header END -->
    <!--Top Nav Dynamic-->
    <div class="top_nav hidden-phone custom_dropdown full_header">
	  	<div class="container-fluid trim_screen">              
		  	<div class="row-fluid" id="site_nav">  
                <a id="centre_logo" href="/">
                    <img src="{{site.logo_image_path}}" style="max-width:95%" />
                </a>
                <ul class="span8">
		  	    {% for menu_item in site.menu_items_array  %}                 
                    {% assign title =  menu_item["title_code"] %}
                    {% if menu_item["sub_menu_items"] and menu_item["sub_menu_items"].size > 0 %}
                        <li class="dropdown span2">
                            <button class="btn-nav" data-toggle="dropdown">{{ title  }}</button>                         
                            {% if forloop.first %}                            
                            <ul class="dropdown-menu bottom" style="left:-105%">
                            {% elsif forloop.last %}                            
                            <ul class="dropdown-menu bottom" style="left:-55%">
                            {% else %}
                            <ul class="dropdown-menu bottom" style="left:-105%">
                            {% endif %}
                            <div class="arrow" style=""></div>
                            {% for sub_menu_item in menu_item["sub_menu_items"] %}
                                <li><a href='{{sub_menu_item["url"] }}' target='{{sub_menu_item["target"] }}'><span>{{sub_menu_item["title_code"]}}</span></a></li>
                            {% endfor %}
                            </ul>
                        </li>  
                    {% else %}
                        <li class="span2">                        
                            <button class="btn-nav" onclick="window.location.href='{{menu_item['url']}}'">{{ title }}</button>
                        </li>
                    {% endif %}
		  	    {% endfor %} 
                </ul>
		   	</div>  
		</div>  
	</div>
</div>    

<div class="container-fluid trim_screen">
    <div class="line_break">&nbsp;</div>
    {{yield}}
    
    <div class="hidden-phone feature_items_bar row-fluid span12" >
        {% for feature_item in site.feature_items_array limit:2 %}
            <div class="span6">
                <a href='{{feature_item.url}}'>
                    {% if forloop.last %}
                    <div class="home_thumbnail" style="text-align:right;">                         
                    {% else %}
                    <div class="home_thumbnail">                         
                    {% endif %}
                        <img class="rounded_shadow" src="{{feature_item.feature_image_path}}" />                  
                    </div>
                </a>
                {% if @can_edit == "true" %}
                <center>
                    <a href="/feature_items/{{feature_item.id}}/edit" class="btn btn-primary">Edit</a>
                </center>
                {% endif %}            
            </div>            
        {% endfor %}
    </div>
    <!-- feature items END -->
</div>
<div class="line_break">&nbsp;</div>
<!--Bottom Nav Dynamic-->
<div class="bottom_nav hidden-phone">
	<div class="container-fluid trim_screen">
		<div class="row-fluid" align="left">
			{% for menu_item in site.menu_items_array %}			            
                <div class="span2">
                    <table>
                        <tr>
							<td align="left" class="bottom_nav_header">
                            {% if menu_item["sub_menu_items"] and menu_item["sub_menu_items"].size > 0 %}
								{{ menu_item["title_code"] }}
                            {% else %}
                            <a href="{{menu_item['url']}}">{{menu_item["title_code"]}}</a>                                
                            {% endif %}
							</td>
						</tr>
						{% for sub_menu_item in menu_item["sub_menu_items"] %}
							<tr>
								<td align="left" class="bottom_nav_list">
									<a href='{{sub_menu_item["url"] }}' target='{{sub_menu_item["target"] }}'>{{sub_menu_item["title_code"]}}</a>
								</td>
							</tr>
						{%endfor%}
					</table>
				</div>					
            {%endfor%}
		</div>
	</div>
</div>    
<!--Footer -->
<div class="footer hidden-phone">
	<div class="container-fluid trim_screen">
		<div class="row-fluid">
		  	<div class="span12">
              <p class="footer_text">
              &copy; 2013 Oakville Place All rights reserved | <a href="/pages/oakville-privacy-policy">Privacy Policy</a> | <a href="http://www.riocan.com/ ">RIOCAN</a> | Powered by <a href="http://www.mobilefringe.com/">Mobile Fringe</a> 
              </p>
            </div>				
		</div>
	</div>
</div>
<div class="footer visible-phone" style="padding-top: 10px;">
	<div class="container-fluid trim_screen">
	    <center class="row-fluid">
            &copy; 2013 Oakville Place All rights reserved | <a href="/pages/oakville-privacy-policy">Privacy Policy</a> | <a href="http://www.riocan.com/ ">RIOCAN</a> | Powered by <a href="http://www.mobilefringe.com/">Mobile Fringe</a> 
        </center>
	</div>
</div>
